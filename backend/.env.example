# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=paysick_db
DB_USER=paysick_user
DB_PASSWORD=your_secure_password_here

# Vercel Postgres (Use this for Vercel deployment)
# POSTGRES_URL="postgres://username:password@host:port/database"
# This will be automatically set by Vercel when you add Vercel Postgres
# Leave commented for local development

# JWT Secret (Generate a secure random string for production)
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Application Settings
CORS_ORIGIN=http://localhost:8080,http://127.0.0.1:8080
ENCRYPTION_KEY=your_encryption_key_here_for_banking_details

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
